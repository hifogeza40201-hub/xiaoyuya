{
  "repo": "shared-memory",
  "description": "小雨和小宇的共享记忆仓库",
  "branches": {
    "main": "共享主分支",
    "xiaoyu/memory": "小宇记忆分支",
    "xiaoyu/memory": "小雨记忆分支"
  },
  "sync": {
    "autoCommit": true,
    "commitInterval": "1h",
    "autoMerge": false
  },
  "messageBoard": {
    "enabled": true,
    "useIssues": true,
    "labels": ["message/xiaoyu", "message/xiaoyu", "task", "shared"]
  },
  "access": {
    "xiaoyu": { "xiaoyu/": "rw", "xiaoyu/": "r", "shared/": "rw" },
    "xiaoyu": { "xiaoyu/": "r", "xiaoyu/": "rw", "shared/": "rw" }
  },
  "directories": {
    "xiaoyu/": "小宇主工作区（弟弟）",
    "xiaoyu/": "小雨主工作区（姐姐）",
    "shared/": "姐弟协作共享区"
  }
}
